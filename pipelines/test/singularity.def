Bootstrap: docker
From: ubuntu:20.04
Stage: build

# install system-level requirements such as libraries and common system utilities
# do NOT install specialized programs here (use conda definitions in pipeline.yml)
%post
    apt-get update && apt-get install -y \
        nano

